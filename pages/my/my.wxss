/* pages/my/my.wxss */
page {
  background-color: #f5f5f5;
}

.my {
  font-family: PingFangSC-Regular, PingFang SC;
  background-color: #33354e;
}

.user-info {
  display: flex;
  flex-direction: column;
  height: 500rpx;
  background-position: 0;
  background-size: cover;
  border-bottom-left-radius: 26rpx;
  border-bottom-right-radius: 26rpx;
  background-repeat: no-repeat;
  align-items: center;
  padding: 38rpx 24rpx 38rpx 24rpx;
  box-sizing: border-box;
}

.fold {
  border-radius: 12rpx;
}

.fold .van-cell {
  padding: 24rpx 20rpx !important;
  box-sizing: border-box;
  border-radius: 12rpx;
}

.user-photo-box,
.username {
  display: inline-block;
  vertical-align: middle;
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.user-photo {
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 50% !important;
  border: 4rpx solid #fff;
  margin-right: 16rpx;
}

.my-list {
  position: absolute;
  left: 0rpx;
  top: 450rpx;
  right: 0rpx;
}

.van-hairline--top-bottom:afte {
  border: 0 !important;
}

.custom-cell {
  margin-top: 20rpx;
}

.custom-cell>view:first-child {
  width: 48rpx;
  height: 48rpx;
}

.custom-cell>view:nth-child(2)>view {
  font-size: 24rpx;
}

.custom-cell>view:last-child {
  font-size: 24rpx;
  color: #aeaeae;
}

.languagebtn {
  width: 456rpx;
  height: 81rpx;
  background: #EDEDEB;
  border-radius: 5rpx 5rpx 5rpx 5rpx;
  margin: 29rpx 0;
  color: #2C5463;
  font-size: 33rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
}

.detailbtn {
  height: 80rpx!important;
  margin: 100rpx 0 40rpx 0;
  padding: 20rpx 106rpx!important;
  border-radius: 8rpx 8rpx 8rpx 8rpx!important;
}